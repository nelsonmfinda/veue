.primary-video__header{
  "data": { "controller": "audience--header-bar" }
}
  .primary-video__header__address_bar
    #address-input{
      "data": {
        "target": "audience--header-bar.addressInput"
      }
    }
  .widget{
    data: {
      "show-when-live": true
    }
  }
    .icon
      = svg_tag "view"
    #active-viewers{
      "data": {
        "controller": "live-viewer-count",
        "target": "live-viewer-count.counter"
      }
    }= current_video.active_viewers_count
  .widget.live{
    data: {
      "show-when-live": true,
      "show-on-audience": true
    }
  }
    .widget-live__desktop
      LIVE
    .widget-live__mobile
      = svg_tag "live"
  .widget{
    data: {
      views: video_views,
      "show-when-vod": true,
      "show-on-audience": "true"
    }
  }
    .icon
      = svg_tag "view"
    #active-viewers
      = video_views
  .replay-badge{
    data: {
      "show-when-vod": true,
      "show-on-audience": true
    }
  }
    .replay-badge__text
      REPLAY
    = svg_tag "no-stream", class: "replay-badge__image"
    .badge-message
      .badge-message__body
        This stream happened on
        = current_video.created_at.strftime("%B %d, %Y")
