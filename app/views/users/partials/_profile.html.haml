.profile-tab#profile-tab{
  data: {
    target: "user-profile.profileTab",
    tab: "profile"
  }
}
  = form_for @user do |f|
    .profile-tab__header
      .profile-tab__header__name{
        "data-action": "click->user-profile#openMenu"
      }
        = svg_tag "back"
        Edit Profile
      .profile-tab__header__actions
        .action-link Discard
        %button.action-button{type: "submit"} Save Changes
    %h4 User Profile Edit

    Display Name
    = f.text_field :display_name

    About Me
    = f.text_area :about_me

    - if @user.profile_image.attached?
      = image_tag @user.profile_image.variant(resize_to_fill: [100, 100])

    Image Upload
    = f.file_field :profile_image

