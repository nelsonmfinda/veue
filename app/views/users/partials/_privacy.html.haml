.setting-tab#privacy-tab{
  data: {
    target: "user-profile.settingsTab",
    tab: "privacy"
  }
}
  .setting-tab__header
    .setting-tab__header__name{
      "data-action": "click->user-profile#openMenu"
    }
      = svg_tag "back"
      Privacy
  .setting-tab__body
    .privacy-setting
      .privacy-setting__info
        Delete Account
        .sub-info
          By deleting your account you will lose all your data
      = link_to 'Delete Account', user_path(current_user), class: "privacy-setting__action", method: :delete, :data => {:confirm => "Are you sure to remove your account?"}
